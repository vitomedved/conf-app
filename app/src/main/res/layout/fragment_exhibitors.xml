<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context=".exhibitors.ExhibitorsFragment"
                android:background="@android:color/white"
                android:id="@+id/fragment_exhibitors">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_exhibitors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
    />
    <com.airbnb.lottie.LottieAnimationView android:layout_width="200dp"
                                           android:layout_height="200dp"
                                           app:lottie_loop="true"
                                           app:lottie_autoPlay="true"
                                           android:layout_centerInParent="true"
                                           android:id="@+id/fragment_exhibitors_loading_animation"
                                           app:lottie_fileName="loading-dots.json"/>

</RelativeLayout>