<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/margin_cardView"
            android:layout_marginTop="@dimen/margin_cardView"
            app:cardBackgroundColor="@android:color/white">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:id="@+id/layout_eventListItem">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_exhibitorLogo"
                    android:layout_weight="0.2"
                    android:layout_marginLeft="@dimen/margin_cardView"
                    android:layout_marginRight="@dimen/margin_cardView"
                    android:layout_marginBottom="@dimen/margin_cardView"
                    android:layout_marginTop="@dimen/margin_cardView"
                    />
            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/darkestBlue"
                    android:layout_margin="5dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_exhibitorCompany"
                    android:layout_weight="0.69"
                    android:textColor="@color/darkBlue"
                    android:padding="@dimen/card_view_padding"
                    android:textAlignment="center"
            />

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_urlExhibitor"
                    android:layout_weight="0.11"
                    android:paddingRight="15dp"
                    android:layout_marginLeft="@dimen/margin_cardView"
                    android:layout_marginRight="@dimen/margin_cardView"
                    android:layout_marginBottom="@dimen/margin_cardView"
                    android:layout_marginTop="@dimen/margin_cardView"
                    app:srcCompat="@drawable/ic_url"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>