<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_event_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".event.EventScrollingActivity" android:padding="@dimen/textPadding_medium"
        android:paddingStart="@dimen/padding_mediumToLarge">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="@dimen/textPadding_medium">
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_scrolling_activity_progress_bar_content" android:layout_centerInParent="true"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView_aboutTitle"
                android:textSize="@dimen/textSize_mediumToLarge"
                android:layout_marginBottom="@dimen/text_margin" android:textColor="@color/darkestBlue"
                android:textStyle="bold" android:layout_alignParentTop="true"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView_aboutEvent"
                android:lineSpacingExtra="@dimen/smallest_spacing" android:layout_marginBottom="@dimen/text_margin"
                android:textSize="@dimen/textSize_medium" android:textColor="@color/darkBlue"
                android:layout_below="@+id/textView_aboutTitle"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_below="@id/textView_aboutEvent"
                      android:orientation="horizontal"
                      android:id="@+id/writeACommentContainer"
                      android:weightSum="1">
            <EditText android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.8"
                      android:hint="@string/write_a_comment"
                      android:id="@+id/editText_comment"
                      android:inputType="textCapSentences|textAutoCorrect"
                      />
            <Button android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:id="@+id/button_sendComment"
                    android:text="@string/sendComment"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@color/lightestBlue"
                      android:id="@+id/comments_container"
                      android:layout_below="@id/writeACommentContainer" android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_comments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>