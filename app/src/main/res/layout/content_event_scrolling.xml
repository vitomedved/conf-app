<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_event_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".event.EventScrollingActivity" android:padding="@dimen/textPadding_medium"
        android:paddingStart="@dimen/padding_mediumToLarge"
        >
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/textPadding_medium"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
    >
        <com.airbnb.lottie.LottieAnimationView android:layout_width="match_parent"
                                               android:layout_height="300dp"
                                               app:lottie_loop="true"
                                               app:lottie_autoPlay="true"
                                               android:layout_centerInParent="true"
                                               app:lottie_fileName="loading-dots.json"
                                               android:id="@+id/event_scrolling_activity_progress_bar_content"/>
        <!--<ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_scrolling_activity_progress_bar_content" android:layout_centerInParent="true"/>-->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView_aboutTitle"
                android:textSize="@dimen/textSize_mediumToLarge"
                android:layout_marginBottom="@dimen/text_margin" android:textColor="@color/darkestBlue"
                android:textStyle="bold" android:layout_alignParentTop="true"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView_aboutEvent"
        android:lineSpacingExtra="@dimen/smallest_spacing" android:layout_marginBottom="@dimen/text_margin"
        android:textSize="@dimen/textSize_medium" android:textColor="@color/darkBlue"
        android:layout_below="@+id/textView_aboutTitle"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/comments_container"
                      android:layout_below="@id/textView_aboutEvent"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/linearLayout_uploadedImageContainer"
                          android:layout_gravity="start">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/darkestBlue"
                />

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="start"
                           android:paddingTop="6dp"
                           android:paddingBottom="6dp"
                           android:id="@+id/imageView_uploadedImage"
                           android:contentDescription="@string/contentDescriptionUploadedImage"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:id="@+id/writeACommentContainer"
                          android:layout_margin="6dp"
                          android:layout_gravity="bottom"
                          android:weightSum="1">
                <EditText android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.74"
                          android:hint="@string/write_a_comment"
                          android:id="@+id/editText_comment"
                          android:maxLines="5"
                          android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                          android:maxLength="150"
                />
                <Button android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.14"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:id="@+id/button_uploadImage"
                        android:background="@android:drawable/ic_menu_camera"
                />

                <Button android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.12"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:id="@+id/button_sendComment"
                        android:background="@drawable/ic_menu_send"
                        android:backgroundTint="@color/lightBlue"/>

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_comments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>