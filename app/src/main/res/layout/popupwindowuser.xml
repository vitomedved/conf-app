<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".login.RegistrationActivity" android:background="@color/zxing_transparent">

    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border">


        <!--tools:srcCompat="@tools:sample/avatars"-->


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="400dp"
                android:layout_height="180dp"
                android:src="@drawable/icon"
                android:id="@+id/imageViewC_avatar_userpopup"
                app:civ_border_width="2dp"
                android:paddingBottom="10dp"
                app:civ_border_color="@color/betweenDarkBlue" android:layout_marginTop="37dp" android:layout_alignParentTop="true"/>


        <TextView
                android:text="@string/user_name"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:textSize="20sp"
                android:textColor="@color/betweenDarkBlue"
                android:layout_below="@+id/imageViewC_avatar_userpopup"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

        <TextView
                android:text="@string/user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_type"
                android:textSize="15sp"
                android:textColor="@color/betweenDarkBlue"
                android:layout_below="@+id/user_name"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>


        <TextView
                android:text="@string/registration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_joined_user"
                android:textSize="15sp"
                android:textColor="@color/betweenDarkBlue"
                android:layout_below="@+id/user_type"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

        <TextView
                android:text="@string/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_email"
                android:textSize="15sp"
                android:textColor="@color/betweenDarkBlue"
                android:layout_below="@+id/date_joined_user"
                android:layout_centerInParent="true"
                android:textAlignment="center" />


        <com.airbnb.lottie.LottieAnimationView android:layout_width="60dp"
                                               android:layout_height="60dp"
                                               app:lottie_loop="true"
                                               app:lottie_autoPlay="true"
                                               android:layout_below="@+id/user_email"
                                               android:layout_centerInParent="true"
                                               app:lottie_fileName="1998-email.json"
                                               android:paddingBottom="10dp"
                                               android:id="@+id/user_email_animation"/>


    </RelativeLayout>

</ScrollView>